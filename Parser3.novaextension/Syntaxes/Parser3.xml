    	<!-- Syntax -->
		<collection name="syntax">
			<scope name="parser3.bracket">
				<expression>[\(\[\{\)\]\}]</expression>
			</scope>
			<scope name="parser3.operator">
				<expression>(\+|\-|\*|\*\*|/|%|\=|\=\=|!\=|\+\=|\-\=|\*\=|/\=|%\=|\*\*=|\&lt;|\&gt;|\&lt;\=|\&gt;=|!|&amp;&amp;|\|\|)</expression>
			</scope>
		</collection>
	</collections>

</syntax>
